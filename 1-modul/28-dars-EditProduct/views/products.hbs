{{#if myProducts}}
<p>My Product lists</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each myProducts}}
        <div class="col">
          <div class="card shadow-sm">
            <img src={{image}} alt="product image" style="height: 450px;">
            <div class="card-body">
              <p class="card-text fw-bold">{{title}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-2 align-items-center">
                <div class="avatar bg-primary">
                    <p>{{ getFullNameFirstCharacter user.firstName user.lastName}}</p>
                </div>
                <p  class="m-0 p-0">{{user.firstName}} {{user.lastName}}</p>
                </div>
                 <small class="text-muted fs-5">$ {{price}}</small>
              </div>

            </div>
            
           
          </div>
        </div>
        {{/each}}
      </div>
{{else}}
<p>No product</p>

{{/if}}