{{#if myProducts}}
   <div class="row d-flex mt-5 justify-content-center mb-5">
 
    {{#each myProducts}}
          	<div class="col-sm-3 d-flex mb-2 align-items-end">
            <div class="">
            <div class="productListImage">
              <div class="productListImage">
                <img class="img-thumbnail border-0" src="{{images.[0]}}">
              </div>
              </div>

              <div class="text py-4 ">
                <div class="d-flex justify-content-between">
                <div class="row">
                  <div class="mb-3 "><a href="#" class="text-decoration-none fw-bold text-dark">
                     {{#if discount}}
                    <div class="">
                      <span class="fs-5 fw-bold">${{countDiscount price discount}} </span>
                      <span class="bg-warning text-mute text-decoration-line-through"> ${{price}} </span>
                    </div>
                    {{else}}
                    <span class="fs-5 fw-bold ">${{price}} </span>
                    {{/if}}
                  </a></div>
                  <div class=""><a href="#" class="text-decoration-none fw-medium rounded bg-light p-1"><span class="bi bi-cart-dash"></span> 3</a>
                    {{#if discount}}
                               <span class="bg-danger-subtle fw-bolder rounded p-1">{{discount}}% discount</span>
                         {{/if}}
                  </div>
                </div>
                <div><a href="#" class="text-decoration-none m-0 p-0 text-dark fw-medium bg-light rounded p-1">{{formatDate createdAt}}</a></div>
                  </div>
                <h3 class="heading mt-2"><a href="/product/{{_id}}" class="text-decoration-none fw-bold text-dark fs-5 text-dark font-monospace">{{truncateText title 0 20}}...</a></h3>
              <p class="lean">{{truncateText description 0 100}}...</p>
              </div>
              <div class="btn-group btn-group-sm">
                    
                    <a type="button" class="btn btn-outline-secondary" href="/product/{{_id}}"><i class="bi bi-eye"></i></a>
                    <a type="button" class="btn btn-outline-secondary" href="/edit-product/{{_id}}"><i class="bi bi-pencil-square"></i></a>
                          <form action="/delete-product/{{_id}}" method="post" class="btn btn-outline-danger">
                            <button type="submit" class="deleteBtn"><i class="bi bi-trash"></i></button>
                          </form>   
              </div> 
            </div>
            
          </div>
      {{/each}}    
        </div>
        <a href="/download-csv" class="btn btn-outline-danger">download-csv</a>
{{else}}
    <div class="container mt-5 mb-5 p-5">
      <h1 class="fw-bold  display-1">404 Not Found</h1>
      <p class="lead">Your visited page not found. You may go home page.</p>
      <a class="btn btn-danger col-4 p-3 mt-3" href="/">Back to home page</a>
    </div>
{{/if}}


