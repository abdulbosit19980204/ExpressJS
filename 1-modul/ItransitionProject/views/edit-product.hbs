<div class="m-auto mt-5">
    <div class="row">
        <div class="col-6">
      <form action="/edit-product/{{product._id}}" method="post" class="" enctype="multipart/form-data">
     <h1 class="h3 mb-3 fw-normal text-center">Edit product</h1>
         {{#if errorEditProduct}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> {{errorEditProduct}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
    <div class="form-floating mb-2">
      <input value="{{product.title}}" name="title" type="text" class="form-control" id="floatingInput" placeholder="title" required>
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-2">
      <textarea name="description" style="height: 150px;" class="form-control" placeholder="Leave a comment here" id="floatingTextarea" required>{{product.description}}</textarea>
      <label for="floatingTextarea">Description</label>
    </div>
         {{!-- <div class="form-floating mb-2">
      <input name="images" type="file"  accept="image/*" class="form-control" id="floatingPassword" placeholder="Image">
      <label for="floatingPassword">Image</label>
    </div> --}}
      <div class="form-floating mb-2">
        <input name="images" type="file" accept="image/*" class="form-control" id="floatingPassword" placeholder="Image" multiple>
        <label for="floatingPassword">Select Images (multiple files allowed)</label>
      </div>

    <div class="input-group mb-2">
      <span class="input-group-text">Price</span>
      <input value="{{product.price}}" name="price" type="number" placeholder="0.000" min="0" step="0.001" class="form-control" id="floatingPassword" aria-label="Dollar amount (with dot and two decimal places)" required>
      <span class="input-group-text">$</span>
      <span class="input-group-text">0.000</span>
    </div>
    
    <div class="input-group mb-2">
      <span class="input-group-text">Discount</span>
      <input value="{{product.discount}}" name="discount" type="number" placeholder="30%" min="0" step="0.001" class="form-control" id="floatingPassword" aria-label="Dollar amount (with dot and two decimal places)" >
      <span class="input-group-text">%</span>
    </div>
    
    <select class="form-select mb-2" aria-label="Default select example" name="productType">
      <option selected>{{product.productType}}</option>
      <option value="Electronic">Electronic</option>
      <option value="Phone">Phone</option>
      <option value="Computers">Computers</option>
      <option value="Smart watch">Smart watch</option>
      <option value="Camera">Camera</option>
      <option value="HeadPhones">HeadPhones</option>
    </select>
   
  
    <button class="btn btn-primary py-2" type="submit">Edit product</button>
    <a href="/" class="text-decoration-none btn btn-warning">Cancel</a>
     </form>
        </div>
        <div class="col-5">
          {{#each product.images}}
          <div class="col-6">
            <img class="img-fluid" src="{{this}}">
          </div>
          {{/each}}
        </div>
    </div>
</div>