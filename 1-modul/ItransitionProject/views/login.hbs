<div class="row mt-5 mb-5">
  <div class="col-6">
    <img src="/img/loginImage.png" class="img-fluid rounded" alt="loginImage">
  </div>
  <div class="col-1"></div>
  <div class="col-5">
     <form action="/login" method="post" class="was-validated m-5">
    
    <h1 class="h3 mb-3 fw-semibold">Log in to <span class="text-black bg-warning rounded p-2 pt-1 pb-1"><i class="bi bi-cart3 text-white"></i>Exclusive</span></h1>
    <h1 class="h3 mb-3 fw-light fs-6">Enter your details below</h1>
      {{#if loginError}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> {{loginError}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{/if}}
    <div class="form-floating mb-2">
      <input  name="email" type="email" class="form-control border-0 border-bottom " id="floatingInput" placeholder="name@example.com" required>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating mb-2">
      <input name="password" type="password" class="form-control border-0 border-bottom" id="floatingPassword" placeholder="Password" required>
      <label for="floatingPassword">Password</label>
    </div>

    <div class="d-flex justify-content-between mt-4">
    <button class="btn btn-danger col-4" type="submit">Log in</button>
    <a href="/register" class="text-danger">Register</a>
    </div>
    <div class="mt-5">
      
      <button class="py-2 mb-2 btn btn-outline-secondary rounded-3" disabled>
           Sign in with third type of auth
             
    </button>
      <button class="py-2 mb-2 btn btn-outline-primary rounded-3" type="submit">
            <i class="bi bi-twitter"></i>
             
    </button>
    <button class="py-2 mb-2 btn btn-outline-primary rounded-3" type="submit">
      <i class="bi bi-facebook"></i>
        
    </button>
    <button class="py-2 mb-2 btn btn-outline-danger rounded-3" type="submit">
      <i class="bi bi-google"></i>
      <a href="/auth/google">Login with Google</a>
    </button>
    </div>
  </form>
  </div>
</div>


