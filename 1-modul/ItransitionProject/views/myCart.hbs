{{#if buyProducts}}
<table class="table table-hover mt-5">
    
<thead class="shadow-sm">
    <tr class="">
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Seller</th>
    </tr>
  </thead>
  <tbody>
 {{#each buyProducts}} 
    <tr>
    <th scope="row">{{plus @index 1}}
      <div class="form-check">
  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
 </div>
 <form action="/delete-product-from-cart/{{_id}}" method="post" class=" text-danger m-0 p-0">
  <button type="submit" class="deleteBtn"><i class="bi bi-trash"></i></button>
 </form>   
  {{!-- <a class="text-danger fs-5" href="/delete-product-from-cart/${{product._id}}"><i class="bi bi-x"></i></a> --}}
    </th>
      <td><img class="img-thumbnail" style="width: 100px;" src="{{product.image}}" alt=""></td>
      <td class="fw-semibold"><a href="/product/{{product._id}}" class="heading text-decoration-none text-black"> {{product.title}}</a></td>
      {{#if product.discount}}
      <td>
         <p class="bg-warning text-decoration-line-through">{{product.price}}</p>   
       <p class="fw-semibold"> {{countDiscount product.price product.discount}}$</p> 
      </td>
      {{else}}
      <td class="fw-semibold">{{product.price}}$</td>
      {{/if}}
      <td>
       <input value="1" name="quantity" style="width: 30px;" type="number" placeholder="1" min="0" step="1"  id="quantity">
      </td>
      <td>
        {{!-- {{#each buyProducts}}
        {{countTotalPrice (countDiscount product.price productdiscount)}}
        {{/each}}$ --}}
        {{#if user.userImage}}
        <img src="{{user.userImage}}" alt="userimage" class="rounded-circle img-thumbnail" style="width: 50px; height: 50px; border: 3px solid rgb(255, 0, 0);">
        {{user.firstName}}  {{user.lastName}}
        {{else}}
        <div class="d-flex gap-2 align-items-center">
                <div class="avatar bg-primary">
                    <p>{{ getFullNameFirstCharacter user.firstName user.lastName}}</p>
                </div>
                <p  class="m-0 p-0">{{user.firstName}} {{user.lastName}}</p>
                </div>
        {{/if}}
      </td>
    </tr>
{{/each}}
  </tbody>
  
</table>
{{/if}}
<div class="d-flex justify-content-between mt-3 mb-5">
    <a class="btn btn-outline-dark" href="/all">Return To Shop</a>
    <button class="btn btn-outline-dark">Update Cart</button>
</div>

<div class="row d-flex justify-content-between mt-3 mb-5">
        <div class="col-4">
          <div class="input-group">
        <input class="form-control rounded-3" name="coupon" type="text" placeholder="Coupon Code" id="couponCode" >
        <button class="btn btn-danger">Apply Coupon</button>
        </div>
        </div>
    <div class="col-6">
        <div class="modal-content rounded-4 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Cart Total</h1>
        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
      </div>

      <div class="modal-body p-5 pt-0">
        <form class="">
          <div class="form-floating mb-3">
            <input type="email" class="form-control rounded-3 border-0 border-4" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control rounded-3 border-0" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          </div>
          <button class="w-100 mb-2 btn btn-lg ps-3 rounded-3 btn-danger" type="submit">Procees to checkout</button>
          <small class="text-body-secondary">By clicking Sign up, you agree to the terms of use.</small>
          <hr class="my-4">
          </form>
      </div>
        </div>
    </div>
</div>