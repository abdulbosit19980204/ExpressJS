{{#if buyProducts}}
<table class="table table-hover mt-5">
    
<thead class="shadow-sm">
    <tr class="">
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Subtotal</th>
    </tr>
  </thead>
  <tbody>
 {{#each buyProducts}} 
    <tr>
    <th scope="row">{{plus @index 1}}</th>
      <td><img class="img-thumbnail" style="width: 100px;" src="{{image}}" alt=""></td>
      <td>{{title}}</td>
      {{#if discount}}
      <td>
         <p class="bg-warning text-decoration-line-through">{{price}}</p>   
       <p class="fw-semibold"> {{countDiscount price discount}}$</p> 
      </td>
      {{else}}
      <td class="fw-semibold">{{price}}$</td>
      {{/if}}
      <td>
       <input value="1" name="quantity" style="width: 30px;" type="number" placeholder="1" min="0" step="1"  id="quantity">
      </td>
      <td>
        {{#each buyProducts}}
        {{countTotalPrice (countDiscount price discount)}}
        {{/each}}$
      </td>
    </tr>
{{/each}}
  </tbody>
  
</table>
{{/if}}
<div class="d-flex justify-content-between mt-3 mb-5">
    <button class="btn btn-outline-dark">Return To Shop</button>
    <button class="btn btn-outline-dark">Update Cart</button>
</div>

<div class="row">
    <div class="input-group">
        <input class="form-control rounded-3" name="coupon" type="text" placeholder="Coupon Code" id="couponCode" >
        <button class="btn btn-danger">Apply Coupon</button>
        </div>
    <div class="col-6">
        <div class="modal-content rounded-4 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Sign up for free</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body p-5 pt-0">
        <form class="">
          <div class="form-floating mb-3">
            <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          </div>
          <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign up</button>
          <small class="text-body-secondary">By clicking Sign up, you agree to the terms of use.</small>
          <hr class="my-4">
          </form>
      </div>
    </div>
    </div>
</div>